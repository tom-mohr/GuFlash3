<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/group_layout"
    android:background="@color/colorWhite"
    style="@style/Widget.AppCompat.Button"
    android:clickable="true"
    android:focusable="true"
    android:padding="12dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:padding="6sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
                />

            <TextView
                android:layout_gravity="start"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
                android:id="@+id/event_list_members"
                android:drawableStart="@drawable/ic_menu_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_weight="0"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="6dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_gravity="start"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
                android:id="@+id/event_list_delta_time"
                android:drawableStart="@drawable/ic_menu_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_gravity="start"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:textAppearance="@style/TextAppearance.AppCompat.SearchResult.Subtitle"
                android:id="@+id/event_list_distance"
                android:drawableStart="@drawable/ic_menu_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>



</RelativeLayout>